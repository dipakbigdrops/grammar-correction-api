# Production Environment Configuration
# Grammar Correction API - Production Ready

# Application Settings
ENVIRONMENT=production
DEBUG=false
APP_NAME=Grammar Correction API
APP_VERSION=1.0.0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Redis Settings (Use real Redis in production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=BigDrops@9991

# Celery Settings
CELERY_BROKER_URL=redis://:BigDrops@9991@redis:6379/0
CELERY_RESULT_BACKEND=redis://:BigDrops@9991@redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# Model Settings
MODEL_PATH=./model
MODEL_MAX_LENGTH=256
MODEL_NUM_BEAMS=5

# OCR Settings
OCR_LANGUAGES=["en"]
OCR_CONFIDENCE_THRESHOLD=0.5

# Processing Settings
MAX_FILE_SIZE=10485760
CONTEXT_WORDS=3

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHING=true

# Monitoring Settings
ENABLE_METRICS=true
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=BigDrops@9991

# CORS Settings (Update with your actual domains)
ALLOWED_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Autoscaling Thresholds
MIN_REPLICAS=3
MAX_REPLICAS=100
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80
TARGET_REQUESTS_PER_SECOND=100

